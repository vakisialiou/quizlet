{
  "version": "1.0",
  "manifest_version": 3,
  "name": "QuizerPlay",
  "short_name": "QuizerPlay",
  "description": "Create flashcards for effective learning with simulators. Automated associations and rewards will help you learn faster and achieve results.",
  "homepage_url": "http://quizerplay.com",
  "icons": {
    "16": "favicon-16x16.png",
    "32": "favicon-32x32.png",
    "96": "favicon-96x96.png"
  },
  "permissions": [
    "storage",
    "alarms",
    "cookies",
    "sidePanel",
    "tabs"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "externally_connectable": {
    "matches": [
      "https://quizerplay.com/*"
    ]
  },
  "side_panel": {
    "default_path": "panel.html"
  },
  "action": {
    "default_title": "QuizerPlay",
    "default_icon": {
      "16": "favicon-16x16.png",
      "32": "favicon-32x32.png",
      "96": "favicon-96x96.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}
